<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nageoffer.shortlink.project.dao.mapper.ShortLinkMapper">

    <select id="groupShortLinkCount" parameterType="java.util.List" resultType="com.nageoffer.shortlink.project.dto.resp.ShortLinkGroupCountQueryRespDTO">
        SELECT gid,COUNT(*) AS shortLinkCount
        FROM t_link
        WHERE gid IN
        <foreach collection="list" item="gid" open="(" separator="," close=")">
            #{gid}
        </foreach>
        AND del_flag = 0
        GROUP BY gid
    </select>
</mapper>